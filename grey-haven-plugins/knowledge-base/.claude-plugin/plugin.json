{
    "name": "knowledge-base",
    "description": "Ontological knowledge management with long-term memory storage. Combines structured knowledge entries with semantic search, version control, and relationship mapping for comprehensive project context management.",
    "version": "1.0.0",
    "author": {
        "name": "Grey Haven Studio"
    },
    "keywords": [
        "knowledge-base",
        "ontology",
        "memory",
        "context",
        "semantic-search",
        "documentation",
        "contextframe"
    ],
    "license": "MIT",
    "agents": [
        "./agents/kb-entry-creator.md",
        "./agents/kb-manifest-generator.md",
        "./agents/kb-ontology-mapper.md",
        "./agents/kb-search-analyzer.md",
        "./agents/kb-validator.md",
        "./agents/knowledge-curator.md",
        "./agents/memory-architect.md",
        "./agents/ontology-builder.md"
    ],
    "commands": [
        "./commands/kb-add.md",
        "./commands/kb-create.md",
        "./commands/kb-list.md",
        "./commands/kb-manifest.md",
        "./commands/kb-memory-commit.md",
        "./commands/kb-memory-recall.md",
        "./commands/kb-relate.md",
        "./commands/kb-search.md",
        "./commands/kb-validate.md",
        "./commands/kb-visualize.md"
    ],
    "dependencies": {
        "python": ">=3.8",
        "optional": [
            "contextframe>=0.1.0",
            "lance>=0.11.0",
            "pyarrow>=14.0.0",
            "rank-bm25>=0.2.2",
            "graphviz>=0.20.0"
        ]
    }
}
