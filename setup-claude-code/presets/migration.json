{
  "name": "Code Migration",
  "description": "Helps with migrating and updating legacy code using existing migration assistant",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/migration-assistant.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/dependency-impact-analyzer.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/similar-code-finder.py"
          }
        ]
      }
    ]
  },
  "agents": [
    "code-quality-analyzer",
    "tech-docs-maintainer"
  ],
  "commands": [
    "/refactor-clarity"
  ],
  "statusLine": {
    "type": "command",
    "command": "bash -c 'input=$(cat); MODEL=$(echo \"$input\" | jq -r \".model.display_name\"); echo \"ðŸ”„ [$MODEL] Migration Mode\"'",
    "padding": 0
  }
}