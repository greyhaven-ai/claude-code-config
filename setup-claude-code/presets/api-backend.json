{
  "name": "API Backend Development",
  "description": "API contract validation and database performance using existing hooks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/api-contract-validator.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/db-query-performance-analyzer.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/dependency-impact-analyzer.py"
          }
        ]
      }
    ]
  },
  "agents": [
    "performance-optimizer",
    "security-analyzer"
  ],
  "commands": [
    "/security-audit",
    "/performance-optimize-chain"
  ],
  "statusLine": {
    "type": "command",
    "command": "bash -c 'input=$(cat); MODEL=$(echo \"$input\" | jq -r \".model.display_name\"); echo \"ðŸ”Œ [$MODEL] API Development\"'",
    "padding": 0
  }
}