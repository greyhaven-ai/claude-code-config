{
  "name": "Performance Optimization",
  "description": "Memory profiling and performance detection using existing agents and hooks",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/performance-regression-detector.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/db-query-performance-analyzer.py"
          }
        ]
      }
    ]
  },
  "agents": [
    "memory-profiler",
    "performance-optimizer"
  ],
  "commands": [
    "/performance-optimize-chain"
  ],
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statuslines/productivity-dashboard.sh",
    "padding": 0
  }
}