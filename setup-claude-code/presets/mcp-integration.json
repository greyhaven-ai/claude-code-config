{
  "name": "MCP Server Integration",
  "description": "Commands for Chrome, Cloudflare, Context7, and Playwright MCP servers",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/auto-documentation-fetcher.py"
          }
        ]
      }
    ]
  },
  "agents": [
    "web-docs-researcher",
    "react-tanstack-tester"
  ],
  "commands": [
    "/chrome-server/frontend-debug-chain",
    "/chrome-server/e2e-test-development",
    "/cloudflare/deploy-debug-chain",
    "/context7/library-learn-implement",
    "/playwright/visual-test-chain",
    "/firecrawl/api-research"
  ],
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statuslines/context-aware.sh",
    "padding": 0
  }
}