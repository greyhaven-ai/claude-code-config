{
  "name": "Linear Issue Tracking Workflow",
  "description": "Integration with Linear for issue tracking and work management",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/work-completion-assistant.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/context-injector.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python/work-completion-assistant.py"
          }
        ]
      }
    ]
  },
  "agents": [
    "bug-issue-creator",
    "git-diff-documentation-agent"
  ],
  "commands": [
    "/linear/continue-work",
    "/linear/continue-debugging",
    "/linear/continue-testing",
    "/linear/debug-systematic",
    "/linear/implement-feature",
    "/linear/plan-implementation",
    "/linear/retroactive-git"
  ],
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statuslines/context-aware.sh",
    "padding": 0
  }
}